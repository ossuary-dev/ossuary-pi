#!/usr/bin/env python3
"""Ossuary Network Management Service Executable."""

import sys
import os
from pathlib import Path

# Add source directory to Python path
sys.path.insert(0, str(Path(__file__).parent.parent.parent / "src"))

from netd.service import main

if __name__ == "__main__":
    if os.geteuid() != 0:
        print("This service must be run as root")
        sys.exit(1)

    main()