#!/usr/bin/env python3
"""Ossuary Configuration Service Executable."""

import sys
import os
import asyncio
from pathlib import Path

# Add source directory to Python path
sys.path.insert(0, str(Path(__file__).parent.parent.parent / "src"))

from config.manager import ConfigManager


async def main():
    """Main configuration service entry point."""
    try:
        config_manager = ConfigManager()
        await config_manager.initialize()

        print("Ossuary Configuration Service started")

        # Keep service running
        while True:
            await asyncio.sleep(60)

    except KeyboardInterrupt:
        print("Configuration service stopped")
    except Exception as e:
        print(f"Configuration service error: {e}")
        sys.exit(1)


if __name__ == "__main__":
    if os.geteuid() != 0:
        print("This service must be run as root")
        sys.exit(1)

    asyncio.run(main())